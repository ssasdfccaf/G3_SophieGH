<!--            app:itemHorizontalTranslationEnabled="false"-->
<!--            app:itemIconTint="#ffffff"-->
<!--            app:labelVisibilityMode="unlabeled"-->
<!--            app:menu="@menu/main_nav" />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>