<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.AuthActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_gravity="center_vertical"
        tools:context=".ui.Auth.AuthActivity">


        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/Animation.Design.BottomSheetDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="15"
                android:text="SIGN IN"
                android:textColor="@color/white"
                android:textSize="21sp" />

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MainActivity">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WELCOME  환영합니다 !"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="15dp"
                android:textSize="18sp" />


<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="   E-MAIL 이메일"-->
<!--                android:textStyle="bold"-->
<!--                android:inputType="textEmailAddress"-->
<!--                android:textSize="15sp"/>-->


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_foreground" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" 이메일  E-MAIL"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textSize="14sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" 비밀번호  PASSWORD"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textSize="14sp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#56000000"
                android:textSize="8sp"
                android:textStyle="bold"
                android:text="      * Forgot Password?   비밀번호를 잊으셨습니까?"
                />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="로그인" />


            <com.google.android.material.chip.Chip
                android:id="@+id/anotherchip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="다른 방법으로 로그인"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:paddingRight="10sp"
                android:textSize="2sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50sp"
                android:gravity="right"
                android:text="* Are you new here?   프로젝트 이름'가 처음이신가요?"
                android:textStyle="bold"
                android:textColor="#56000000"
                android:textSize="8sp" />



            <Button
                android:id="@+id/fragment_register"
                android:backgroundTint="@color/M3_sys_lighton_surface_variant"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:gravity="right"
                android:text="회원가입" />

<!--            <ToggleButton-->
<!--                android:id="@+id/toggleButton2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"-->
<!--                android:textSize="10sp"-->
<!--                android:textOn="회원가입"-->
<!--                android:textOff="회원가입"-->
<!--                android:gravity="right" />-->


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


